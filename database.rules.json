{
  "rules": {
    "notifications": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "root.child('admins').child(auth.uid).val() === true || auth.uid === $uid"
      }
    },
    "fcmTokens": {
      "$uid": {
        ".read": "root.child('admins').child(auth.uid).val() === true",
        ".write": "auth.uid === $uid"
      }
    },
    "admins": {
      ".read": "auth !== null",
      ".write": false
    },
    "users": {
      ".read": true,
      ".write": "root.child('admins').child(auth.uid).val() === true",
      "$uid": {
        "handicap": {
          ".validate": "newData.isNumber()"
        }
      }
    },
    ".read": false,
    ".write": false
  }
}

